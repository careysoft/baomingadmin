
@{
    ViewBag.Title = "登录";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <!--IE Compatibility modes-->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!--Mobile first-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    @*<title>Login Page - RTL</title>*@

    <meta name="description" content="Free Admin Template Based On Twitter Bootstrap 3.x">
    <meta name="author" content="">

    <meta name="msapplication-TileColor" content="#5bc0de" />
    <meta name="msapplication-TileImage" content="/Content/assets/img/metis-tile.png" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/Content/assets/lib/bootstrap/css/bootstrap.rtl.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="/Content/assets/lib/font-awesome/css/font-awesome.css">

    <!-- Metis core stylesheet -->
    <link rel="stylesheet" href="/Content/assets/css/main.rtl.css">

    <!-- metisMenu stylesheet -->
    <link rel="stylesheet" href="/Content/assets/lib/metismenu/metisMenu.css">

    <!-- onoffcanvas stylesheet -->
    <link rel="stylesheet" href="/Content/assets/lib/onoffcanvas/onoffcanvas.css">

    <!-- animate.css stylesheet -->
    <link rel="stylesheet" href="/Content/assets/lib/animate.css/animate.css">

    <style media="screen">
/*        body {
            direction: rtl;
        }*/
    </style>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body class="login">

    <div class="form-signin">
        <div class="text-center">
            <img src="/Content/assets/img/logo.png" alt="Metis Logo">
        </div>
        <hr>
        <div class="tab-content">
            <div id="login" class="tab-pane active">
                <form action="/login/loginDo" method="post">
                    <p class="text-muted text-center">
                        @Html.Raw(ViewBag.MESSAGE)
                    </p>
                    <input type="text" placeholder="用户名" name="username" id="username" value="@ViewBag.USERNAME" class="form-control top">
                    <input type="password" placeholder="密码" name="password" id="password" value="@ViewBag.PASSWORD" class="form-control bottom">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="remember" id="remember" @ViewBag.CHECKED> &nbsp;&nbsp;&nbsp;&nbsp;记住密码
                        </label>
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">登 录</button>
                </form>
            </div>
            <div id="forgot" class="tab-pane">
                <form action="index.html">
                    <p class="text-muted text-center">请输入您的手机号码</p>
                    <input type="email" placeholder="手机号码" class="form-control top">
                    <div class="input-group">
                        <input type="text" pattern="\d*" class="form-control bottom" style="border-right:solid 2px #ccc;border-radius:0;border-bottom-left-radius:5px;" name="verificationCode" value="" id="verificationCode" placeholder="验证码">
                        <span class="input-group-btn">
                            <button class="btn btn-line" id="btn_getPass" type="button" style="line-height:29px;left:-1px;top:-4px;width:60px;border:solid 1px #ccc;border-left:none;border-radius:0;border-bottom-right-radius:5px;">获取</button>
                        </span>
                    </div>
                    <br>
                    <button class="btn btn-lg btn-danger btn-block" type="submit">找回密码</button>
                </form>
            </div>
            <div id="signup" class="tab-pane">
                <form action="index.html">
                    <input type="text" placeholder="用户名" class="form-control top">
                    <input type="text" placeholder="手机号" class="form-control middle">
                    <div class="input-group">
                        <input type="text" pattern="\d*" class="form-control middle" style="border-right:solid 2px #ccc" name="verificationCode" value="" id="verificationCode" placeholder="验证码"> <!--这里验证码的样式，调试了很久才弄对了-->
                        <span class="input-group-btn">
                            <button class="btn btn-line" style="top:1px;left:-1px;line-height:30px;width:60px;border:none;border-right:solid 1px #ccc;border-radius:0;" id="btn_getPass" type="button" >获取</button>
                        </span>
                    </div>
                    <input type="password" placeholder="密码" class="form-control middle">
                    <input type="password" placeholder="重复密码" class="form-control bottom">
                    <button class="btn btn-lg btn-success btn-block" type="submit">注 册</button>
                </form>
            </div>
        </div>
        <hr>
        <div class="text-left">
            <ul class="list-inline">
                <li><a class="text-muted" href="#signup" data-toggle="tab">注册</a></li>
                <li><a class="text-muted" href="#forgot" data-toggle="tab">忘记密码</a></li>
                <li><a class="text-muted" href="#login" data-toggle="tab">登录</a></li>
            </ul>
        </div>
    </div>


    <!--jQuery -->
    <script src="/Content/assets/lib/jquery/jquery.js"></script>

    <!--Bootstrap -->
    <script src="/Content/assets/lib/bootstrap/js/bootstrap.js"></script>


    <script type="text/javascript">
        (function($) {
            $(document).ready(function() {
                $('.list-inline li > a').click(function() {
                    var activeForm = $(this).attr('href') + ' > form';
                    //console.log(activeForm);
                    $(activeForm).addClass('animated fadeIn');
                    //set timer to 1 seconds, after that, unload the animate animation
                    setTimeout(function() {
                        $(activeForm).removeClass('animated fadeIn');
                    }, 1000);
                });
            });
        })(jQuery);
    </script>
</body>

</html>